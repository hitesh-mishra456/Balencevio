<h1 class="dashboard-heading">Add New Entry</h1>

<form action="/addnew" method="post">

    <div class="row add-entry-row">
        <div class="form-group row col-sm-12">
            <div class="col-sm-2">
                <span>Veggies :</span>
            </div>
            <div class="col-sm-10">
                <input type="text" class="form-control bg-dark text-center text-light" name="veggies" value="0">
            </div>
        </div>
        <div class="form-group row col-sm-12">
            <div class="col-sm-2">
                <span>Travel :</span>
            </div>
            <div class="col-sm-10">
                <input type="text" class="form-control bg-dark text-center text-light" name="travel" value="0">
            </div>
        </div>
        <div class="form-group row col-sm-12">
            <div class="col-sm-2">
                <span>Ration :</span>
            </div>
            <div class="col-sm-10">
                <input type="text" class="form-control bg-dark text-center text-light" name="ration" value="0">
            </div>
        </div>
        <div class="form-group row col-sm-12">
            <div class="col-sm-2">
                <span>Medicine :</span>
            </div>
            <div class="col-sm-10">
                <input type="text" class="form-control bg-dark text-center text-light" name="medicine" value="0">
            </div>
        </div>
    </div>
    <div class="form-group others-div rounded">
        <h3 style="margin-left: 40%;">Others</h3>
        <div class="row">
            <div class="col-sm-4">
                <span>Description:</span>
                <input type="text" class="form-control bg-dark text-light text-center"
                name="desc" placeholder="Desc">
            </div>
            <div class="col-sm-4">
                <span>Amount:</span>
                <input type="text" class="form-control bg-dark text-light text-center"
                name="amount" value="0">
            </div>
            <div class="col-sm-4">
                <span style="display: block;">Type:</span>
                <select class="bg-dark col-sm-10 form-control text-light" name="type">
                    <option>Expense</option>
                    <option >Income</option>
                </select>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-lg col-sm-9 add-btn login-button form-group">Select</button>
</form>

