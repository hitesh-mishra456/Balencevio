<h1 class="show-heading">Monthly Report</h1>

<div>
    <div class="head-bar">
      <span style="margin-left: 3%;">Date</span>
      <span class="head-element-month">Veggies</span>
      <span class="head-element-month">Travel</span>
      <span class="head-element-month">Ration</span>
      <span class="head-element-month">Medicine</span>
      <span class="head-element-month">Others</span>
    </div>
    <form action="/show-single" method="post">
    <%monthlyReport.forEach((item)=>{%>
      <%if(index%2!==0){%>
      <div class="gray-box bg-dark head-bar">
        <a>
            <input type="submit" value="<%=item.date%>" name="date" class="showdate bg-dark date"/>
        </a>
        <span class="veggies"><%=item.veggies%></span>
        <span class="travel"><%=item.travel%></span>
        <span class="ration"><%=item.ration%></span>
        <span class="medicine"><%=item.medicine%></span>
        <span class="others"><%=item.others%></span>
      </div>
      <%}else{%>
        <div class="gray-box head-bar">
            <a>
                <input type="submit" value="<%=item.date%>" name="date" class="showdate date"/>
            </a>
            <span class="veggies"><%=item.veggies%></span>
            <span class="travel"><%=item.travel%></span>
            <span class="ration"><%=item.ration%></span>
            <span class="medicine"><%=item.medicine%></span>
            <span class="others"><%=item.others%></span>
          </div>
      <%}%>
      <%index++%>
    <%})%>
  </form>
  </div>

