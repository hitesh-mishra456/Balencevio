<%- include('partials/header') %>

<div class="container mt-5">

  <%if(msg.length!=0){%>
    <div class="alert alert-info" role="alert">
      <%=msg%>
    </div>
  <%}%>
  
    <h1 class="login-heading">Sign Up For Balencevio</h1>
  
    <div class="row">
      <div class="col-sm-6">  
            <!-- Makes POST request to /register route -->
            <form action="/register" method="POST" id="form1" onsubmit="return Validate();" 
             class="login-section-container">
              <div class="form-group col-sm-10">
                <input type="email" class="form-control text-center form-control-lg bg-dark" 
                id="username" name="username" placeholder="Your Email">
                <span id="alert-class"></span>
              </div>
              <div class="form-group col-sm-10">
                <input type="password" class="form-control text-center form-control-lg bg-dark" name="password" placeholder="Password">
              </div>
               <input type="submit" class="btn btn-lg col-sm-9 btn-login login-button" >
            </form>
      </div>
  
      <div class="col-sm-1 slash">
        <span class="display-4">/</span>
      </div>

      <div class="col-sm-5 slash">
          <div class="card-body">
            <a class="btn btn-block btn-social btn-google bg-primary border border-white 
            text-light col-sm-10 form-control-lg " href="/auth/google" role="button">
                <i class="fab fa-google"></i>
                    Sign In with Google
            </a>
           </div>
      </div>
  </div>
  
</body>  

  <script type="text/javascript">
    function Validate()
    {
      var pattern ="^[a-z0-9](\.?[a-z0-9]){5,}@g(oogle)?mail\.com$";
      let inputText=document.getElementById("username").value;
      let alertClass=document.getElementById("alert-class");
      if(inputText.match(pattern))
      {
        return true;
      }
      else
      {
          alertClass.innerHTML= "Invalid Email Address";
          alertClass.style.color="#ff0000";
          return false;
      }
    }
  </script>

<script src="https://kit.fontawesome.com/9d91138091.js" crossorigin="anonymous"></script>

</html>