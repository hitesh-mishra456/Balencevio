<%- include('partials/header') %>

<div class="container mt-5">
    <h1 class="login-heading">Sign In To Balencevio</h1>
  
    <div class="row">
      <div class="col-sm-6">
  
            <!-- Makes POST request to /login route -->
            <form action="/login" method="POST" class="login-section-container">
              <div class="form-group col-sm-10">
                <input type="email" class="form-control text-center form-control-lg bg-dark" name="username" placeholder="Your Email">
              </div>
              <div class="form-group col-sm-10">
                <input type="password" class="form-control text-center form-control-lg bg-dark" name="password" placeholder="Password">
              </div>
               <button type="submit" class="btn btn-lg col-sm-9 btn-login login-button">Login</button>
            </form>
      </div>
  
      <div class="col-sm-1 slash">
        <span class="display-4">/</span>
      </div>

      <div class="col-sm-5 g-btn-res">
          <div class="card-body">
            <a class="btn btn-block btn-social btn-google bg-primary border border-white 
            text-light col-sm-10 form-control-lg " href="/auth/google" role="button">
                <i class="fab fa-google"></i>
                    Sign In with Google
            </a>
           </div>
      </div>
      <div class="account-create-class">
          <p>Don't Have An Account ?<a href="/register" class="text-warning"> Create One </a></p>
      </div>
  </div>
  

<%- include('partials/footer') %>